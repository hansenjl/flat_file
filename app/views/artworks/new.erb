<div class="index">
<a id="cancel-button" href="/artists">Cancel</a>

    
<div class="logged-in">
<h1  class="main-header"> Add an artwork by <%= @artist.name %> </h1> <br>

<form action="/artworks" method="post">

    <input class="input-box" type="text" name="artwork[title]" placeholder="Title" required><br>
   
    <input class="input-box" type="text" name="artwork[medium]" placeholder="Medium"><br>
    
    <input class="input-box" type="text" name="artwork[location]"placeholder="Location" ><br>

    <input class="input-box" type="textarea" name="artwork[notes]"placeholder="Notes" ><br>

    
  <input id="hidden" type="hidden" name="artist_id" value="<%=@artist.id %>">
  
<input type="submit" class="add" value="Add">
</form>
</div>
</div>
